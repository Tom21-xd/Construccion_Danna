@model Construccion_Danna.Models.Usuario;
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Inicio Sesion</title>
    <style>
        body {
            background-image: url("img/fondo.jpg");
            object-fit: contain;
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>

<body>
    <div class="container p-5 bg-white position-absolute top-50 start-50 translate-middle border border-black" style="width:450px; height:500px;">
        <form action="@Url.Action("Login","Home")" method="post">
            <div class="mb-5">
                <h1 class="text-center">Sistema misional Chaira</h1>
            </div>
            <div class="mb-3">
                <label  class="form-label">Correo</label>
                <input type="email" class="form-control" name="UsuCorreo">
            </div>
            <div class="mb-5">
                <label  class="form-label">Contraseña</label>
                <input type="password" class="form-control" name="UsuToken">
            </div>
            <div class="d-grid"> 
                <button type="submit" class="btn btn-primary mb-5">Entrar</button>
            </div>
        </form>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>